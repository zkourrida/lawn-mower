<?xml version="1.0" encoding="UTF-8"?>

<Configuration name="Lawn-Mower" monitorInterval="30" status="info">

  <Appenders>
    <Console name="stdout">
      <PatternLayout pattern="%d{DEFAULT}|%p|%c{1.}|%m%n"/>
    </Console>
  </Appenders>

  <Loggers>
    <Logger name="fr.mowitnow.lawnmower" level="debug"/>
    <Root level="info">
      <AppenderRef ref="stdout"/>
    </Root>
  </Loggers>

</Configuration>
